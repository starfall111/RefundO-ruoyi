<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.refund.root.mapper.RfFaqsMapper">
    
    <resultMap type="RfFaqs" id="RfFaqsResult">
        <result property="id"    column="id"    />
        <result property="categoryId"    column="category_id"    />
        <result property="question"    column="question"    />
        <result property="answer"    column="answer"    />
        <result property="viewCount"    column="view_count"    />
        <result property="isTop"    column="is_top"    />
        <result property="isFaq"    column="is_faq"    />
        <result property="sortOrder"    column="sort_order"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectRfFaqsVo">
        select id, category_id, question, answer, view_count, is_top, is_faq, sort_order, status, create_time, update_time from rf_faqs
    </sql>

    <select id="selectRfFaqsList" parameterType="RfFaqs" resultMap="RfFaqsResult">
        <include refid="selectRfFaqsVo"/>
        <where>  
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="question != null  and question != ''"> and question like concat('%', #{question}, '%')</if>
            <if test="viewCount != null "> and view_count = #{viewCount}</if>
            <if test="isTop != null "> and is_top = #{isTop}</if>
            <if test="sortOrder != null "> and sort_order = #{sortOrder}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="params.beginUpdateTime != null and params.beginUpdateTime != '' and params.endUpdateTime != null and params.endUpdateTime != ''"> and update_time between #{params.beginUpdateTime} and #{params.endUpdateTime}</if>
        </where>
    </select>
    
    <select id="selectRfFaqsById" parameterType="Long" resultMap="RfFaqsResult">
        <include refid="selectRfFaqsVo"/>
        where id = #{id}
    </select>

    <insert id="insertRfFaqs" parameterType="RfFaqs" useGeneratedKeys="true" keyProperty="id">
        insert into rf_faqs
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryId != null">category_id,</if>
            <if test="question != null and question != ''">question,</if>
            <if test="answer != null and answer != ''">answer,</if>
            <if test="viewCount != null">view_count,</if>
            <if test="isTop != null">is_top,</if>
            <if test="isFaq != null">is_faq,</if>
            <if test="sortOrder != null">sort_order,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryId != null">#{categoryId},</if>
            <if test="question != null and question != ''">#{question},</if>
            <if test="answer != null and answer != ''">#{answer},</if>
            <if test="viewCount != null">#{viewCount},</if>
            <if test="isTop != null">#{isTop},</if>
            <if test="isFaq != null">#{isFaq},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateRfFaqs" parameterType="RfFaqs">
        update rf_faqs
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="question != null and question != ''">question = #{question},</if>
            <if test="answer != null and answer != ''">answer = #{answer},</if>
            <if test="viewCount != null">view_count = #{viewCount},</if>
            <if test="isTop != null">is_top = #{isTop},</if>
            <if test="isFaq != null">is_faq = #{isFaq},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRfFaqsById" parameterType="Long">
        delete from rf_faqs where id = #{id}
    </delete>

    <delete id="deleteRfFaqsByIds" parameterType="String">
        delete from rf_faqs where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>